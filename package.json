{
  "name": "@sestra/sdk",
  "version": "0.1.0",
  "description": "Sestra SDK for JavaScript/TypeScript - Pay-per-request API client",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "sestra",
    "api",
    "pay-per-request",
    "solana",
    "x402",
    "payment-gateway",
    "typescript"
  ],
  "author": "Sestra Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sestralabs/Sestra-SDK-JS.git"
  },
  "bugs": {
    "url": "https://github.com/sestralabs/Sestra-SDK-JS/issues"
  },
  "homepage": "https://github.com/sestralabs/Sestra-SDK-JS#readme",
  "dependencies": {
    "@solana/spl-memo": "^0.2.5",
    "@solana/web3.js": "^1.98.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^9.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@solana/spl-memo": "^0.2.5",
    "@solana/web3.js": "^1.98.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
